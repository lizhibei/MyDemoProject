<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/head" />

    <Button
        android:id="@+id/get_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET请求方式"
        android:textSize="@dimen/middle_small" />

    <Button
        android:id="@+id/post_not_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST请求方式-未带参数"
        android:textSize="@dimen/middle_small" />

    <Button
        android:id="@+id/post__b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST请求方式-带参数"
        android:textSize="@dimen/middle_small" />

    <Button
        android:id="@+id/post_json_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="post  请求参数为json格式"
        android:textSize="@dimen/middle_small" />

    <Button
        android:id="@+id/upload_file_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传文件"
        android:textSize="@dimen/middle_small" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/down_file_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载文件"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/middle_small" />

        <ImageView
            android:id="@+id/down_image_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/image" />
    </LinearLayout>
</LinearLayout>